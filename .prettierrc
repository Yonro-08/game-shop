{
	"tabWidth": 2,
	"useTabs": true,
	"singleQuote": true,
	"semi": true,
	"bracketSpacing": true,
	"jsxSingleQuote": false,
	"endOfLine": "lf",
	"arrowParens": "always",

	"plugins": ["@ianvs/prettier-plugin-sort-imports"],
	"importOrder": [
		"^react/(.*)$",
		"<THIRD_PARTY_MODULES>",
		"",
		"^components/(.*)$",
		"^api/(.*)$",
		"^hooks/(.*)$",
		"^types/(.*)$",
		"^pages/(.*)$",
		"^utils/(.*)$",
		"^assets/(.*)$",
		"^constants/(.*)$",
		"",
		"^[./]"
	],
	"importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
	"importOrderTypeScriptVersion": "5.0.0"
}
